<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rayhahah.advancedanim.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="动画进阶学习"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/btn_vector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="doClick"
            android:text="VectorDrawable"
            android:textAllCaps="false"
            android:textColor="#f14ac5"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_bezier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="doClick"
            android:text="Bezier"
            android:textAllCaps="false"
            android:textColor="#3cd634"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_pathmeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="doClick"
            android:text="PathMeasure"
            android:textAllCaps="false"
            android:textColor="#ff5831"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_lollipop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="doClick"
            android:text="lollipop"
            android:textAllCaps="false"
            android:textColor="#5d5fff"
            android:textSize="25sp"/>


    </LinearLayout>
</ScrollView>